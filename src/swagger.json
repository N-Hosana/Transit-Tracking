{
  "openapi": "3.0.0",
  "info": {
    "title": "Transit Tracking API",
    "version": "1.0.0",
    "description": "API for managing and searching available buses and trips based on user location and destination in Rwanda."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "tags": [
    { "name": "Auth", "description": "Authentication endpoints" },
    { "name": "Admin", "description": "Admin-only operations" },
    { "name": "Trips", "description": "Trip search and availability" },
    { "name": "Buses", "description": "Bus-related operations" }
  ],
   "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/register": {
  "post": {
    "tags": ["Auth"],
    "summary": "Register user or admin",
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "password": { "type": "string" },
              "role": {
                "type": "string",
                "enum": ["USER", "ADMIN"]
              }
            },
            "required": ["email", "password"]
          }
        }
      }
    },
    "responses": {
      "201": { "description": "Registered successfully" }
    }
  }
},

   "/auth/login": {
  "post": {
    "tags": ["Auth"],
    "summary": "Login user or admin",
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "email": { "type": "string" },
              "password": { "type": "string" }
            },
            "required": ["email", "password"]
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Login successful",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" },
                "role": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
},

    "/admin/buses": {
      "post": {
        "summary": "Create a bus (Admin only)",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BusInput"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Bus created successfully" }
        }
      }
    },

    "/admin/trips": {
      "post": {
        "summary": "Create a trip (Admin only)",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TripInput"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Trip created successfully" }
        }
      },
      "get": {
        "summary": "Get all trips (Admin only)",
        "tags": ["Admin"],
        "responses": {
          "200": {
            "description": "All trips",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Trip" }
                }
              }
            }
          }
        }
      }
    },

    "/trips/search": {
      "get": {
        "summary": "Search available trips by location and destination",
        "tags": ["Trips"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "string",
                    "example": "Nyamirambo"
                  },
                  "to": {
                    "type": "string",
                    "example": "Town"
                  }
                },
                "required": ["from", "to"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Available trips and buses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/AvailableTrip" }
                }
              }
            }
          },
          "400": {
            "description": "Location and destination are required"
          }
        }
      }
    },

    "/trips/{id}/board": {
      "post": {
        "summary": "Board a bus (decrease available seats)",
        "tags": ["Trips"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Seat updated successfully" },
          "400": { "description": "No seats available" }
        }
      }
    }
  },

  "components": {
    
        "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
   
    "schemas": {
      "BusInput": {
        "type": "object",
        "properties": {
          "plateNumber": { "type": "string" },
          "driverName": { "type": "string" },
          "totalSeats": { "type": "integer" }
        },
        "required": ["plateNumber", "totalSeats"]
      },

      "TripInput": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "price": { "type": "number" },
          "estimatedDurationMinutes": { "type": "integer" },
          "availableSeats": { "type": "integer" },
          "busId": { "type": "integer" }
        },
        "required": ["from", "to", "price", "estimatedDurationMinutes", "availableSeats", "busId"]
      },

      "Trip": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "from": { "type": "string" },
          "to": { "type": "string" },
          "price": { "type": "number" },
          "estimatedDurationMinutes": { "type": "integer" },
          "availableSeats": { "type": "integer" },
          "busId": { "type": "integer" }
        }
      },

      "AvailableTrip": {
        "type": "object",
        "properties": {
          "busId": { "type": "integer" },
          "from": { "type": "string" },
          "to": { "type": "string" },
          "price": { "type": "number" },
          "availableSeats": { "type": "integer" },
          "estimatedArrivalMinutes": { "type": "integer" },
          "trafficWarning": { "type": "string", "example": "Moderate traffic" }
        }
      }
    }
  }
}
