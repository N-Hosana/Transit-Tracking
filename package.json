    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N-Hosana/Transit-Tracking.git"
